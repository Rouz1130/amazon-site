{{#if addNewReview}}
<h4>New Review</h4>
  <div class="form-group">
    <form>

    <label for="author">Name</label>
    {{input value=author id="author" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="comment">Comment</label>
    {{input value=comment id="comment" class="form-control"}}
    <button {{action 'saveReview'}} class= "btn btn-default" >Submit</button>
  </form>
</div>
{{else}}
  <button {{action 'reviewFormShow'}}>New Review</button>
{{/if}}
